#!/usr/bin/env python3

import time

sec = time.clock_gettime(time.CLOCK_MONOTONIC)

days = int(sec / (60 * 60 * 24))
sec = sec % (60 * 60 * 24)

hours = int(sec / (60 * 60))
sec = sec % (60 * 60)

minutes = int(sec / 60)
sec = sec % 60

sec = round(sec, 2)

print(f"Real uptime: {days} days, {hours} hours, {minutes} minutes, {sec} seconds")

#!/usr/bin/env bash

clean_exit=false
while [[ $clean_exit == false ]]; do
    appimage-run ~/.local/opt/kopia/KopiaUI-0.9.5.AppImage \
        && clean_exit=true
    if [[ $clean_exit == false ]]; then
        notify-send "Kopia-UI Crashed" "Kopia-UI has exited with a non-zero exit code and will be restarted."
    fi
done


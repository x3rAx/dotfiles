[init]
    defaultBranch = main
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[include]
	path = .gitconfig.local
[core]
	#editor = code --wait
	excludesfile = .gitignore-global
    pager = "f() { if [ \"$(command -v delta)\" ]; then delta \"$@\"; else less \"$@\"; fi; }; f"
[pull]
	ff = only
[merge]
	ff = false
[push]
	default = simple
[gc]
	autoDetach = false
[alias]
	new = "!new() { local m=\"${*:-\"ðŸ¦„ Initial commit.\"}\"; if [[ ! -d .git ]]; then git init && git commit --allow-empty -m \"$m\"; else echo \"ERROR: Git repository already initialized!\" >&2; exit 1; fi; }; new"
	tree = log --date=iso --graph --pretty=\"format:%C(yellow)%<(7)%h%C(reset)%x09%ad%C(reset)  %C(blue)%<(15)%an%C(reset)  %C(bold yellow)%d%C(reset) %C(green)%s%C(reset)\"
	tree-all = tree --exclude refs/stash --all
	co = checkout
	st = status
	br = branch
	cm = commit -m
	ca = commit --amend
	amend = commit --amend
    sub = subrepo
    sub-st = sub status

    # === Emoji Log ===
    # NEW.
    cnew = "!f() { git commit -e -m \"ðŸ“¦ NEW: $@\"; }; f"
    # IMPROVE.
    cimp = "!f() { git commit -e -m \"ðŸ‘Œ IMPROVE: $@\"; }; f"
    # FIX.
    cfix = "!f() { git commit -e -m \"ðŸ› FIX: $@\"; }; f"
    # RELEASE.
    crlz = "!f() { git commit -e -m \"ðŸš€ RELEASE: $@\"; }; f"
    # DOC.
    cdoc = "!f() { git commit -e -m \"ðŸ“– DOC: $@\"; }; f"
    # TEST.
    ctst = "!f() { git commit -e -m \"ðŸ¤– TEST: $@\"; }; f"
    # BREAKING CHANGE.
    cbrk = "!f() { git commit -e -m \"â€¼ï¸ BREAKING: $@\"; }; f"
[delta]
	side-by-side = false
	line-numbers = true


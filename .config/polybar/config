[module/xwindow]
type = internal/xwindow

; NOTE: The `%{T2}` forces the second font (1-indexed), that is the font
;       defined by `font-1`. `%{T-}` resets the font
; label = %{T2}%title:0:30:...%%{T-}
label = %title:0:30:...%
label-font = 2


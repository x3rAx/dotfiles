[module/online-check]
type = custom/script

exec = ping -c1 x3ro.net >/dev/null 2>&1 && echo 'ï’„' || echo 'ï ˜'
interval = 5


[module/kopia-check]
type = custom/script
label = ï± %output%
exec = kopia maintenance info 2>&1 | (! grep -q 'ERROR') && echo '' || echo 'KOPIA'
label-padding = 1
format-background = ${colors.alert}
interval = 15
cursor-click = pointer
click-left = `which kitty || which xterm` -e bash -c 'kopia maintenance info | less'

[module/home-dirty-check]
type = custom/script
label = "ó±‚¶ %output%"
exec = yadm diff --quiet && echo '' || echo '!'
label-padding = 1
format-background = ${colors.warn}
format-foreground = ${colors.background}
interval = 15


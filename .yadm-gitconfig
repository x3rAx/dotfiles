[user]
	email = git@x3ro.dev
	name = ^x3ro
[alias]
    yadm-gitconfig = !git config -f ~/.yadm-gitconfig
    status-untracked = status -unormal
    untracked = status-untracked
    un = untracked
    code = !"awk -i inplace '(NR == 1 && !/^\\*$/) { print \"*\" } { print $0 }' .yadm-gitignore && code -w .; awk -i inplace '!(NR == 1 && /^\\*$/) { print $0 }' .yadm-gitignore"
    bash = !yadm enter bash
